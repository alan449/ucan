<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Chrome">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ucan Sportswear</title>
    <link rel="icon" type="image/x-icon" href="img/logo1.jpg">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="style.css">
    <script src="https://checkout.stripe.com/checkout.js" defer></script>
    <script>
      var stripePublicKey='<%= stripePublicKey %>'
    </script>
    <script src="script.js" defer></script>
  </head>
  <body>
    <section id="header">
      <a href="#"><img src="img/logo.png" class="logo" alt=""></a>
      <div>
        <ul id="navbar">
          <li><a href="index.html">Home</a></li>
          <li><a href="shop.html">Shop</a></li>
          <li><a href="blog.html">Blog</a></li>
          <li><a href="about.html">About</a></li>
          <li><a href="contact.html">Contact</a></li>
          <li id="lg-bag"><a class="active" href="cart.html"><i class="far fa-shopping-bag"></i></a></li>
          <a href="#" id="close"><i class="far fa-times"></i></a>
        </ul>
      </div>
      <div id="mobile">       
        <a href="cart.html"><i class="far fa-shopping-bag"></i></a>
        <i id="bar" class="fas fa-outdent"></i>
      </div>
    </section>

    <section id="page-header">
      <h2>#cart</h2>
      <p>Add your coupon code & SAVE!</p>   
    </section>
    <div class="container">
      <h4 class="section-header shop-items">JERSEYS</h4>
      <section id="prodetails" class=" section-p1">
        
        <% items.JERSEYS.forEach(function(item){ %>        
          <div class="shop-item" data-item-id="<%= item.id %>">
            <div class="single-pro-image">
              <img class="shop-item-image" src="img/<%= item.imgName %>" width="100%" id="MainImg" alt="">       
            </div>

            <div class="single-pro-details">
              <h6 class="shop-item-title"><%= item.name %></h6>
              <h4><%= item.color %></h4>
              <h2 class="shop-item-price"><%= item.price / 100 %></h2>
              <button class="normal shop-item-buttton" type="button">Add To Cart</button>
            </div>           
          </div>
        <% }) %>
      </section>

      <h4 class="section-header shop-items">TEAMWEAR</h4>
      <section id="prodetails" class="section-p1 ">
        
        <% items.TEAMWEAR.forEach(function(item){ %>        
          <div class="shop-item" data-item-id="<%= item.id %>">
            <div class="single-pro-image">
              <img class="shop-item-image" src="img/products/<%= item.imgName %>" width="100%" id="MainImg" alt="">       
            </div>

            <div class="single-pro-details">
              <h6 class="shop-item-title"><%= item.name %></h6>
              <h4><%= item.color %></h4>
              <h2 class="shop-item-price"><%= item.price / 100 %></h2>
              <button class="normal shop-item-buttton" type="button">Add To Cart</button>
            </div>           
          </div>
        <% }) %>       
      </section>

      <section id="cart" class="section-p1 cart">
        <h1>Cart</h1>
        <table width="100%">
          <thead>
            <tr>
              <td>Remove</td>
              <td class="cart-image">Image</td>
              <td class="cart-item">Product</td>
              <td>Size</td>
              <td class="cart-price">Price $</td>
              <td>Quantity</td>
            </tr>
          </thead>
          <tbody class="cart-items">

          </tbody>
        </table>
      </section>

      <section id="cart-add" class="section-p1">
        <div id="coupon">
          <h3>Apply Coupon</h3>
          <div>
            <input type="text" placeholder="Enter Your Coupon">
            <button class="normal">ApplyREMOVE</button>
          </div>
        </div>

        <div id="subtotal">
          <h3>Cart Totals $</h3>
          <table>
            <tr>
              <td>Cart Subtotal</td>
              <td class="cart-subtotal">0.00</td>
            </tr>
            <tr>
              <td>Shipping</td>
              <td class="shipping">0.00</td>
            </tr>
            <tr>
              <div class="cart-items"></div>
              <td><strong>Total</strong></td>
              <td class="cart-total"><strong>0.00</strong></td>
            </tr>
          </table>
          <button type="button" class="normal btn-purchase">Purchase</button>
        </div>
      </section>
    </div>
    <footer class="section-p1">
      <div class="col">
        <img class="logo" src="img/logo.png" alt="">
        <h4>Contact</h4>
        <p><strong>Address:</strong> ******** Sydney, Australia ********</p>
        <p><strong>Phone:</strong> 1300 123 123</p>
        <p><strong>Hours:</strong> 10:00 - 18:00, Mon - Fri</p>
        <div class="follow">
          <h4>Follow us</h4>
          <div class="icon">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-pinterest-p"></i>
            <i class="fab fa-youtube"></i>
          </div>
        </div>
      </div>

      <div class="col">
        <h4>About</h4>
        <a href="#">About us</a>
        <a href="#">Delivery Information</a>
        <a href="#">Privacy Policy</a>
        <a href="#">Terms & Conditions</a>
        <a href="#">Contact us</a>
      </div>

      <div class="col">
        <h4>My Account</h4>
        <a href="#">Sign In</a>
        <a href="#">View Cart</a>
        <a href="#">My Wishlist</a>
        <a href="#">Track My Order</a>
        <a href="#">Help</a>
      </div>

      <div class="col install">
        <h4>Install App</h4>
        <p>From App Store or Google Play</p>
        <div class="row">
          <img src="img/pay/i1.png" alt="">
        </div>
        <p>Secured Payment Gateways</p>
        <img src="img/pay/i2.jpg" alt="">
      </div>

    </footer>

    <div class="copyright">
      <p>â’¸ 2022, This website is developed by Alan Chan</p>
    </div>
    
  </body>
</html>